    0: sw_graphics_LNER_BT_T;
}

// livery name refit switch
switch(FEAT_TRAINS, SELF, sw_LNER_BT_T_cargo_subtype_text, cargo_subtype){
	0:	return string(str_BRMaroon);
       return CB_RESULT_NO_TEXT;
}

// length switch
switch(FEAT_TRAINS, SELF, sw_length_LNER_BT_T, position_in_articulated_veh % 6) {
	0: 4;
	1: 2;
	2: 4;
    3: 4;
    4: 2;
    5: 4;
}

// capacity switch
switch(FEAT_TRAINS, SELF, sw_capacity_LNER_BT_T, position_in_vehid_chain % 6) {
    0: 135 * param_pax; // all the capacity - (vehid chain number)
    1..5: 1 * param_pax;
    // total 140
}

// articulation switch
switch(FEAT_TRAINS, SELF, sw_articulated_LNER_BT_T, extra_callback_info1) {
	1: return item_LNER_BT_T;
	2: return item_LNER_BT_T;
    3: return item_LNER_BT_T;
    4: return item_LNER_BT_T;
    5: return item_LNER_BT_T;
		return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

