spritegroup spritegroup_BR_Mk3_TR_Intercity_Loading {  
    loaded: [spriteset_empty];
    loading: [spriteset_BR_Mk3_TR_Intercity_Loading]; }


switch(FEAT_TRAINS, SELF, sw_loadstack_BR_Mk3_TLUK_Intercity_Executive, [ STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100), getbits(extra_callback_info1, 8, 8) ] ) {
    0: spriteset_BR_Mk3_TLUK_Intercity_Executive;
    1: spritegroup_BR_Mk3_TR_Intercity_Loading; }

// livery switch
switch(FEAT_TRAINS, SELF, sw_livery_BR_Mk3_TLUK, cargo_subtype) {
    0: sw_loadstack_BR_Mk3_TLUK_Intercity_Executive; }

// livery name refit switch
switch(FEAT_TRAINS, SELF, sw_BR_Mk3_TLUK_cargo_subtype_text, cargo_subtype){
	0:	return string(str_BRInterCityExecutive);
       return CB_RESULT_NO_TEXT; }

// graphics switch
switch(FEAT_TRAINS, SELF, sw_graphics_BR_Mk3_TLUK, position_in_articulated_veh % 3) {
	1: return sw_livery_BR_Mk3_TLUK;
	    spriteset_empty; }

// length switch
switch(FEAT_TRAINS, SELF, sw_length_BR_Mk3_TLUK, position_in_articulated_veh % 3) {
	0: 4;
	1: 6;
	2: 4; }

// capacity switch
switch(FEAT_TRAINS, SELF, sw_capacity_BR_Mk3_TLUK, position_in_vehid_chain % 3) {
    0: 14 * param_pax; // all the capacity - (vehid chain number)
    1..2: 1 * param_pax;
    // total 16 
}

// articulation switch
switch(FEAT_TRAINS, SELF, sw_articulated_BR_Mk3_TLUK, extra_callback_info1) {
	1: return item_BR_Mk3_TLUK;
	2: return item_BR_Mk3_TLUK;
		return CB_RESULT_NO_MORE_ARTICULATED_PARTS; }

// unit definition
item (FEAT_TRAINS, item_BR_Mk3_TLUK, 12123) {
    property {
        // common properties
        name:                           string(STR_NAME_BR_Mk3_TLUK);
        variant_group:                  item_BR_Mk3_Header; // unit ID or item
		extra_flags:                    bitmask(VEHICLE_FLAG_DISABLE_NEW_VEHICLE_MESSAGE, VEHICLE_FLAG_DISABLE_EXCLUSIVE_PREVIEW, VEHICLE_FLAG_SYNC_VARIANT_EXCLUSIVE_PREVIEW, VEHICLE_FLAG_SYNC_VARIANT_RELIABILITY);
        climates_available:             ALL_CLIMATES;
        introduction_date:              date(1975,01,01); 
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life: 					40;
        retire_early: 					-10;							
        reliability_decay: 				20;
        
		refittable_cargo_classes:        bitmask(CC_PASSENGERS);
        cargo_allow_refit:               [PASS, TOUR];
        misc_flags: 					bitmask(TRAIN_FLAG_AUTOREFIT, TRAIN_FLAG_SPRITE_STACK);
        cargo_capacity:                 1;
        loading_speed:					10;
        cost_factor: 					108;			
        running_cost_base:				RUNNING_COST_STEAM;				
        running_cost_factor: 			90;

        //specific properties
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        speed:                          125 mph;
        refit_cost:                     0;
        track_type:                     RAIL;
        weight:                         37 ton;
        dual_headed:                    0;
        length:                         8;
    }

    graphics {
        // graphics
        default:                        sw_graphics_BR_Mk3_TLUK;
        purchase:                       spriteset_BR_Mk3_TLUK_Intercity_Executive_purchase;
        
        // internal code
        length:                         sw_length_BR_Mk3;
        articulated_part:               sw_articulated_BR_Mk3_TLUK;
        speed:                          sw_speed_BR_Mk3() * 1609 / 1000;
        purchase_cargo_capacity:        return (5 * param_pax); // divide by number of articulated parTLUK and floor
        cargo_capacity:                 sw_capacity_BR_Mk3_TLUK;
        cost_factor:                    1662;
        running_cost_factor:            2053;
        cargo_subtype_text:             sw_BR_Mk3_TLUK_cargo_subtype_text; 
        colour_mapping:                 return PALETTE_CC_FIRST;

        // purchase menu text
        additional_text:                return( string(str_purchase_coach,
                                                    string(str_coach_TLUK),
                                                    string(str_BR_Mk3_liveries)));
    }
}