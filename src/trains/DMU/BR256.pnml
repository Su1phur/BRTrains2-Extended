    1: spriteset_BR43_GWR;
    4: sw_loadstack_BR_Mk3_TGS_GWR;
    7: sw_loadstack_BR_Mk3_TS_GWR;
    10: sw_loadstack_BR_Mk3_TSD_GWR;
    13: sw_loadstack_BR_Mk3_TS_GWR;
    16: spriteset_BR43_GWR_REV;
        spriteset_empty; }

