    0: sw_graphics_BR256_GWR; }

// livery name refit switch
switch(FEAT_TRAINS, SELF, sw_BR256_cargo_subtype_text, cargo_subtype) {
    0: return string(str_GWR); 
        return CB_RESULT_NO_TEXT; }

// length switch
switch(FEAT_TRAINS, SELF, sw_length_BR256, position_in_articulated_veh % 18) {
	1: 3;
    4: 6;
    7: 6;
    10: 6;
    13: 6;
    16: 3;
     4; }


// capacity switch
switch(FEAT_TRAINS, SELF, sw_capacity_BR256, position_in_vehid_chain % 18) {
    0: 201 * param_pax; // all the capacity - (vehid chain number)
    1..17: 1 * param_pax;
    // total 219
}

// articulation switch
